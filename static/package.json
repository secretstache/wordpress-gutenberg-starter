{
  "name": "ssm-static-boilerplate",
  "version": "3.0.1",
  "author": "Secret Stache Media <rich@secretstache.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "start": "cross-env npm-run-all -l clean -p start:*",
    "start:vite": "cross-env vite build --watch --mode development",
    "start:eleventy": "cross-env prefix= mode=development eleventy --serve",
    "build": "cross-env npm-run-all clean build:*",
    "build:vite": "cross-env vite build --mode production",
    "build:eleventy": "cross-env prefix=/static mode=production eleventy --quiet"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/cli": "^4.1.15",
    "@tailwindcss/vite": "^4.1.15",
    "cross-env": "^7.0.3",
    "glob": "^11.0.3",
    "html-prettify": "^1.0.7",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-custom-media": "^11.0.6",
    "rimraf": "^5.0.1",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.1.7",
    "vite": "^7.1.11"
  }
}
